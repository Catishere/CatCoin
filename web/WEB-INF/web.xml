<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MineServlet</servlet-name>
        <servlet-class>servlets.MineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MineServlet</servlet-name>
        <url-pattern>/mine/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BlockServlet</servlet-name>
        <servlet-class>servlets.BlockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockServlet</servlet-name>
        <url-pattern>/block/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>servlets.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>
</web-app>